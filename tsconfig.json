{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "paths": { "~/*": ["./src/*"] },
    "outDir": "./build",
    "strict": true,
    "typeRoots" : ["./node_modules/@types", "./types"],
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2017"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "//include": ["./src/**/*", "./types.d.ts"],
  "//module": "ESNext"
}
